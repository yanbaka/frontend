{
  "name": "frontend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "tsc": "tsc",
    "watch:pug2html": "pug src/pug/ --hierarchy -o dist/ -w -P",
    "start:server": "browser-sync start -s dist -w src/*.html src/css/*.css src/js/*.js",
    "compile:css2cssprefix": "postcss dist/css/style.css -u autoprefixer -o dist/css/style.css",
    "precompile:stylus2css": "mkdirp dist/css",
    "compile:stylus2css": "stylus --include-css src/stylus/style.styl -o dist/css/ -m",
    "compile:stylus2cssprefix": "run-s compile:stylus2css compile:css2cssprefix",
    "watch:stylus2cssprefix": "chokidar \"src/**/*.styl\" -c \"npm run compile:stylus2cssprefix\" --initial",
    "watch:ts": "webpack -w",
    "watch:img": "chokidar \"src/img/**/*\" --command \"node imagemin.js\" --initial",
    "delete:dist": "rimraf dist",
    "copy:static": "cpx \"static/**/*\" dist/",
    "prewatch:all": "run-s delete:dist copy:static",
    "format:stylus": "stylus-supremacy format **/*.styl -p .stylintrc.json -r",
    "watch:format": "onchange \"src/**/*\" -- npm run format:all",
    "lint:ts": "eslint **/*.ts",
    "format:ts": "eslint **/*.ts --fix",
    "format:all": "run-p format:stylus format:ts",
    "min:css": "cleancss -o dist/css/style.css dist/css/style.css",
    "min:js": "uglifyjs dist/js/main.js -o dist/js/main.js",
    "delete:map": "rimraf dist/**/*.map",
    "prepare:all": "run-p min:js min:css delete:map",
    "dist:pug": "pug src/pug/ --hierarchy -o dist/ -P",
    "dist:stylus": "npm run compile:stylus2cssprefix",
    "dist:ts": "webpack",
    "dist:img": "node imagemin.js",
    "start": "run-p start:server watch:pug2html watch:stylus2cssprefix watch:ts watch:img watch:format",
    "dist": "run-s prewatch:all dist:* prepare:all"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jquery": "^3.5.5",
    "@types/pubsub-js": "^1.8.2",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "autoprefixer": "^10.2.5",
    "browser-sync": "^2.26.14",
    "chokidar-cli": "^2.1.0",
    "clean-css-cli": "^5.2.2",
    "cpx": "^1.5.0",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-prettier": "^3.3.1",
    "imagemin-cli": "^6.0.0",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-keep-folder": "^5.3.2",
    "imagemin-mozjpeg": "^9.0.0",
    "imagemin-pngquant": "^9.0.2",
    "imagemin-svgo": "^7.1.0",
    "mkdirp": "^0.5.5",
    "modern-css-reset": "^1.4.0",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss": "^8.2.9",
    "postcss-cli": "^8.3.1",
    "prettier": "^2.2.1",
    "pug-cli": "github:pugjs/pug-cli#master",
    "rimraf": "^2.7.1",
    "stylelint": "^13.12.0",
    "stylint": "^2.0.0",
    "stylus": "^0.54.8",
    "stylus-supremacy": "^2.15.0",
    "ts-loader": "^9.2.3",
    "typescript": "^4.2.3",
    "uglify-es": "^3.3.9",
    "webpack": "^5.39.0",
    "webpack-cli": "^4.7.2"
  },
  "dependencies": {
    "jquery": "^3.6.0",
    "pubsub-js": "^1.9.3"
  }
}
